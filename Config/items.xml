<mdtdItems>
  <!-- CUSTOM SCHEMATICS -->
  <append xpath="/items">
    <!-- RADIO RESEARCHER -->
    <item name="radioHamSchematic">
      <property name="Extends" value="schematicNoQualityMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="radioHam"/>
      <property name="Unlocks" value="radioHam"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="radioHam" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
      </effect_group>
    </item>

    <!-- METAL CHAIN -->
    <item name="modMeleeClubMetalChainSchematic">
      <property name="Extends" value="schematicNoQualityMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="modMeleeClubMetalChain"/>
      <property name="Unlocks" value="modMeleeClubMetalChain"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="modMeleeClubMetalChain" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
      </effect_group>
    </item>

    <!-- (NOT YET IMPLEMENTED BY TFP)
    <item name="modRoboticDroneWeaponModSchematic">
      <property name="Extends" value="schematicNoQualityMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="modRoboticDroneWeaponMod"/>
      <property name="Unlocks" value="modRoboticDroneWeaponMod"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="modRoboticDroneWeaponMod" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
      </effect_group>
    </item>
    -->
  </append>

  <!-- ATTRIBUTE SCHEMATIC TO BLOCK'S INVENTORY -->
  <append xpath="/items/item[starts-with(@name, 'mod') and contains(@name, 'Schematic')]">
    <property name="Group" value="Mods" />
  </append>
  <append xpath="/items/item[starts-with(@name, 'food') and contains(@name, 'Schematic')]">
    <property name="Group" value="Food/Cooking" />
  </append>
  <append xpath="/items/item[starts-with(@name, 'planted') and contains(@name, 'Schematic')]">
    <property name="Group" value="Food/Cooking" />
  </append>
</mdtdItems>

